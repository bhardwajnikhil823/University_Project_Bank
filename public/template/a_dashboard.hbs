   <script>
        let userlink=document.getElementById('userlink');
        let signoutlink=document.getElementById('signoutlink');
        let userlinka=document.getElementById('userlinka');
        let signoutlinka=document.getElementById('signoutlinka');
        var currentuser=null;
        
        function getUsername(){
            let keepLoggedIn=localStorage.getItem("keepLoggedIn");
            if(keepLoggedIn=="yes"){
                currentuser=JSON.parse(localStorage.getItem('user'));
            }
            else{
                currentuser=JSON.parse(sessionStorage.getItem('user'));
            }
        }
        function SignOut(){
            sessionStorage.removeItem('user');
            localStorage.removeItem('user');
            localStorage.removeItem('keepLoggedIn');
            var loc = window.location.href;
            window.location.href = "https://university-prohect-bankkk.onrender.com/admin";
        }
        window.onload=()=>{
            getUsername();
            if(currentuser==null){
                userlink.innerText="Login";
                userlink.classList.remove("btn");
                userlink.classList.add("button");
                userlinka.href="login.html";
                signoutlink.innerText="Sign Up";
                signoutlinka.href="https://university-prohect-bankkk.onrender.com/admin";
            }
            else{
                userlink.innerText=currentuser.Name;
                userlink.classList.add("btn");
                userlink.classList.remove("button");
                userlinka.href="#";
                signoutlink.innerText="Sign Out";
                signoutlinka.href="javascript:SignOut()";
            }
        }
